<div class="container mt-5">
  <div class="card shadow p-4 card-dash" style="max-width: 600px; margin: auto;">
    <h2 class="card-title text-center mb-4 card-dash-title">Créer un Service</h2>
    <%= simple_form_for @service do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    as: :select,
                    collection: %w[JS Rust Java Kotlin Ruby Python Go TypeScript PHP OCaml Haskell Fortran Perl],
                    label: "Nom du service",
                    label_html: { class: "card-dash-text" },
                    input_html: { class: "form-control" },
                    wrapper_html: { class: "mb-3" } %>


        <%= f.input :daily_rate,
                    label: "Tarif journalier (€)",
                    label_html: { class: "card-dash-text" },
                    input_html: { class: "form-control", type: "number", step: "1" },
                    wrapper_html: { class: "mb-3" } %>

        <%= f.input :description,
                    label: "Description",
                    label_html: { class: "card-dash-text" },
                    input_html: { class: "form-control", type: "text"},
                    wrapper_html: { class: "mb-3" } %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Créer le Service", class: "btn-creation w-100 card-dash-btn" %>
      </div>
    <% end %>
  </div>
</div>
