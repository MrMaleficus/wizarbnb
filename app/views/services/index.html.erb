<div class="container">
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-md-3 mb-3">
        <div class="card h-100 shadow-sm card-dash m-3">
          <div class="card-body">
            <h5 class="card-title card-dash-title">
              <img src="https://abrudz.github.io/logos/<%= service.name %>.svg"
                   alt="<%= service.name %> logo"
                   style="width: 20px; height: 20px; margin-right: 8px;">
              <%= "#{service.name}" %> <br>par <%= "#{service.user.name}" %>
            </h5>
            <p class="card-text card-dash-text"><strong>A partir de </strong> <%= service.daily_rate %>€</p>
            <%= service.star_rating.html_safe %> <%= link_to "#{service.reviews.count} avis", service_reviews_path(service), class: "card-text" %>
            <p class="card-text card-dash-text">
              <%= button_to "Réserver", new_service_booking_path(service), method: :get, class: "btn-creation card-dash-btn-service" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="apple_pagination m-3 card-dash" style="text-align: center">
  <div class="page_info ">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @services, previous_label: "Précédent", next_label: "Suivant", :container => false %>
</div>
