<div class="container my-5">
  <section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Liste de vos services</h2>
      <%= button_to "Créer un service", new_service_path, class: "btn-creation" %>
    </div>
    <div class="row">
      <% @services.each do |service| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= service.name %></h5>
              <p class="card-text">Tarif journalier : <%= service.daily_rate %>€</p>
              <p class="card-text"><%= "#{service.bookings.size} prestations totales." %></p>
              <p class="card-text">
                <%= service.bookings.count { |booking| booking.status == "confirmed" } %> prestations prévues.
              </p>
            </div>
            <div class="card-footer text-end bg-transparent border-top-0">
              <%= button_to "Effacer", service_path(service),
                            method: :delete,
                            data: { confirm: "Êtes-vous sûr de vouloir effacer ce service ?" },
                            class: "btn-destroy" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Réservations en cours</h2>
      <%= button_to "Réserver un service", services_path, class: "btn-creation" %>
    </div>
    <div class="row">
      <% @user_bookings.reject { |booking| booking.status == "passed" }.each do |booking| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body" >
              <h5 class="card-title"><%= "#{booking.service.name} par #{booking.service.user.name}" %></h5>
              <p class="card-text"><%= link_to "Accéder au profil", user_path(booking.service.user) %></p>
              <p class="card-text"><strong>Date de début :</strong> <%= booking.start_date %></p>
              <p class="card-text"><strong>Date de fin :</strong> <%= "#{booking.end_date} #{pluralize(booking.total_days, "jour")}" %></p>
              <p class="card-text"><strong>Prix total :</strong> <%= booking.total_price %>€</p>
              <p class="card-text"><strong>Statut :</strong> <%= @messages["#{booking.status}"] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Mes prestations</h2>
    </div>
    <div class="row">
      <% @user_services.reject { |booking| booking.status == "passed" }.each do |booking| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body" >
              <h5 class="card-title"><%= "#{booking.service.name} pour #{booking.user.name}" %></h5>
              <p class="card-text"><strong>Date de début :</strong> <%= booking.start_date %></p>
              <p class="card-text"><strong>Date de fin :</strong> <%= "#{booking.end_date} #{pluralize(booking.total_days, "jour")}" %></p>
              <p class="card-text"><strong>Prix total :</strong> <%= booking.total_price %>€</p>
              <p class="card-text"><strong>Statut :</strong> <%= booking.status %></p>
              <% if booking.status == "pending" %>
                <div data-controller="booking-response" data-booking-response-booking-id="<%= booking.id %>">
                  <span data-booking-response-target="status"></span>
                  <div class="d-flex gap-2">
                    <button type="button" data-booking-response-target="acceptButton" data-action="click->booking-response#accept" class="btn btn-success">
                      Accepter
                    </button>
                    <button type="button" data-booking-response-target="declineButton" data-action="click->booking-response#decline" class="btn btn-danger">
                      Décliner
                    </button>
                    </div>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
