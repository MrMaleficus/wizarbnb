<div class="container my-5">
  <h2 class="mb-4">Avis pour le service : <%= @service.name %> proposé par <%= @service.user.name %></h2>

  <% @service.reviews.each do |review| %>
    <div class="card h-100 shadow-sm card-dash mb-4">
      <div class="row g-0">
        <div class="col-md-3 border-end">
          <div class="card-body text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{review.user.nickname}", alt: review.user.name, class: "img-fluid rounded-circle mb-2", style:"width: 60px; height: 60px;" %>
            <h5 class="card-title card-dash-title" style="margin-bottom: 0.5rem;"><%= review.user.name %></h5>
          </div>
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h4 class="card-title">Note : <%= review.star_rating.html_safe %></h4>
            <p class="card-text"><%= simple_format(review.content) %></p>
            <p class="card-text text-muted"><small>Posté le <%= l(review.created_at, format: :long) %></small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
