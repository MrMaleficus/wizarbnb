<div class="card-category">
  <div class="banner_title">
    <h1 class="home-center-top harry-font">Développer vos projets avec les pouvoirs des freelancers</h1>
  </div>

  <!-- La barre de recherche sort du flux normal, donc elle est libre -->
  <div class="search-wrapper">
    <div class="serch-bar-center">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query"
            placeholder="Recherchez un service..."/>
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>


