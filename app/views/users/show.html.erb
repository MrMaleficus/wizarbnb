  <h1>Détails des services</h1>
  <div class="container">
    <div class="row">
      <div class="card-house house-<%= @user.house %> my-3 col-3" >
          <div class="avatar-container">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{@user.nickname}", class:"card-avatar" %>
            <%= image_tag "#{@user.house}.png", class:"avatar-badge-format" %>
          </div>
          <div class="card-body">
            <h3 class="card-title-user" style="color:white"><%= "#{@user.name}" %></h3>
            <h5 class="card-text" style="color:white"><%= "#{pluralize(@user.services.size, "service")}" %></h5>
          </div>
      </div>
      <div class="col-9 my-5">
        <div class="row">
          <% @user.services.each do |service| %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= service.name %></h5>
                  <p class="card-text"><%= service.daily_rate %> €</p>
                  <div class="service-stats mt-3">
                  </div>
                  <div class="mt-3">
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
