  <h1 class="show-h1">Détails des services</h1>
  <div class="container">
    <div class="row">
      <div class="card-house house-<%= @user.house %> my-3 col-3" >
          <div class="avatar-container">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{@user.nickname}", class:"card-avatar" %>
            <%= image_tag "#{@user.house}.png", class:"avatar-badge-format" %>
          </div>
          <div class="card-body">
            <h3 class="card-title-user" style="color:wheat;font-family: 'Cinzel', serif; text-decoration: none"><%= "#{@user.name}" %></h3>
            <h5 class="card-text" style="color:wheat;font-family: 'Cinzel', serif; text-decoration: none";><%= "#{pluralize(@user.services.size, "service")}" %></h5>
          </div>
      </div>
      <div class="col-9 my-5">
        <div class="row">
          <% @user.services.each do |service| %>
            <div class="col-md-4 mb-4">
              <div class="card card-dash">
                <div class="card-body">
                  <h5 class="card-title card-dash-title"><img src="https://abrudz.github.io/logos/<%= service.name %>.svg"
                       alt="<%= service.name %> logo"
                       style="width: 20px; height: 20px; margin-right: 8px;"><%= service.name %></h5>
                  <p class="card-text card-dash-text"><%= service.daily_rate %> €/jour</p>
                  <p class="card-text card-dash-text"><%= service.description %></p>
                  <div class="mb-2">
                    <%= service.star_rating.html_safe %>
                    <a href="#"
                       class="card-text"
                       data-bs-toggle="modal"
                       data-bs-target="#reviewsModal-<%= service.id %>">
                      (<%= service.reviews.count %> avis)
                    </a>
                  </div>
                  <div class="mt-3">
                    <%= button_to "Réserver", new_service_booking_path(service), method: :get, class: "btn-creation card-dash-btn" %>
                  </div>
                </div>
              </div>
            </div>
            <%= render "shared/reviews", service: service %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
